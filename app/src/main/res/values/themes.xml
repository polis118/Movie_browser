<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme, dependent on Material Components library. -->
    <style name="Theme.MovieBrowser" parent="Theme.Material3.DayNight.NoActionBar">
        <!--
            This is the base theme for the app BEFORE compose is loaded.
            The actual Compose theme is defined in ui/theme/Theme.kt
        -->
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.MovieBrowser</item>
    </style>
</resources>